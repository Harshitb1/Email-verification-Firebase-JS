		 <form class="splash-container" action="/signup" method="POST">
		<div class="col s12 z-depth-6 card-panel">

		<div class="login-form login-div">
			<div class="row">
				<div class="input-field col s12 center">
					<p class="center  login-form-text" style="font-weight: 800;">REGISTER THEN VERIFY YOUR ACCOUNT</p>
				</div>
			</div>
